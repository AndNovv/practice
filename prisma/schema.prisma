generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Sanatorium {
  id                String      @id @default(cuid())
  name              String      @unique
  location          String
  price             Int
  rating            Float
  description       String
  treatmentProfiles Treatment[]
  comments          Comment[]
  images            Image[]
}

model Treatment {
  id           String      @id @default(cuid())
  name         String      @unique
  Sanatorium   Sanatorium? @relation(fields: [sanatoriumId], references: [id])
  sanatoriumId String?

  @@index([sanatoriumId])
}

model Comment {
  id           String      @id @default(cuid())
  author       String
  text         String
  Sanatorium   Sanatorium? @relation(fields: [sanatoriumId], references: [id])
  sanatoriumId String?

  @@index([sanatoriumId])
}

model Image {
  id           String      @id @default(cuid())
  img          String      @unique
  Sanatorium   Sanatorium? @relation(fields: [sanatoriumId], references: [id])
  sanatoriumId String?

  @@index([sanatoriumId])
}
